<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tomcat-bundle</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>    
    <formats>
        <!-- <format>zip</format> -->
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${tomcat.dir}</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/tomcat</directory>
            <outputDirectory>/</outputDirectory>              
            <filtered>true</filtered>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/resources</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apache-tomcat-${tomcat.version}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>**/webapps/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.war</source>
            <outputDirectory>/domains/localhost/webapps</outputDirectory>
            <destName>SemaGrow.war</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/semagrow</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>provided</scope>
            <includes>
                <include>*:*</include>
            </includes>
            <excludes>
                <exclude>javax.servlet:*</exclude>
                <exclude>javax.servlet.jsp:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
